<!DOCTYPE html>
<html>
  <head>
  <title><%= yield(:title) %> | Mediflection</title>
    <%= render 'layouts/rails_default' %>
  </head>

  <body>
    <%= render 'layouts/header' %>
    <% flash.each do |message_type, message| %>
      <div class="alert alert-<%= message_type %>"><%= message %></div>
    <% end %>
    <div class="container">
        <%= yield %>
    </div>

  </body>
</html>
